{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "removeComments": true,
    "outDir": "dist/",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
